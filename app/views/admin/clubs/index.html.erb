

<div class="row">
<div class="col-sm-12">
 	 <div class="col-sm-6"> <h2>All Clubs</h2></div>
	 <div class="col-sm-6" style="text-align: right;">
	<h2><%= link_to 'New Club', new_admin_club_path %></h2>
	</div>
</div>
</div>
<div class="row">
  <div class="table-responsive">
<table  class="table table-striped table-bordered dt-responsive nowrap">
<thead>
<tr>
	<td>
		Club Name
	</td>
	<td>
		Club Icon
	</td>
	<td>
		Edit
	</td>
	
	<td>
		Delete
	</td>
</tr>
</thead>
<tbody>
<% if @clubs.nil? ==true %>
	
	no data found

<% else %>
<% @clubs.each do |row| %>

<tr>
	<td>
		<%= row[:name] %>	
	</td>
	<td>
  		<%= image_tag row.club_pic.url %>
	</td>
	<td>
	 <%= link_to "edit", edit_admin_club_path(row) %> 
	</td>
	
	<td>
			<%=  link_to "Delete", admin_club_path(row), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %> 
	</td>		

</tr>
<% end %>
<% end %>
</tbody>
</table>

</div>
</div>

<script type="text/javascript">
	$(document).ready(function() {
    $('.table').DataTable();
} );

</script>